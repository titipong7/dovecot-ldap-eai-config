#dsync_remote_cmd = ssh -p 11022 -i /home/vmail/.ssh/tanagan-private-key-ssh.pem %{host} /usr/bin/dsync-in-wrapper.sh
dsync_remote_cmd = ssh -p 11022 -i /home/vmail/.ssh/tanagan-private-key-ssh-nopass.pem %{host} doveadm dsync-server -u%u

plugin {
#  mail_replica = remoteprefix:vmail@10.1.1.227
  mail_replica = remote:vmail@10.1.1.227
}

service aggregator {
  fifo_listener replication-notify-fifo {
    user = vmail
##    group = vmail
##    mode = 0660
  }
  unix_listener replication-notify {
    user = vmail
##    group = vmail
##    mode = 0660
  }
}

service replicator {
  unix_listener replicator-doveadm {
    mode = 0600
    user = vmail 
  }
}

replication_max_conns = 500


service doveadm {
  inet_listener {
    port = 12345
  }
}

doveadm_port = 12345

doveadm_password = ThaiNSServer

plugin {
  mail_replica = tcp:10.1.1.227:12345 
}


###mail quota
protocol imap {
  mail_plugins = $mail_plugins imap_quota
}
plugin {
      quota = maildir:User quota
    # Quota limit is 4GB
    # quota_rule = *:storage=2G
    # We add 100Mb more for Trash
      quota_rule = Trash:storage=+100M
    # We set up warnings at 75% and 90%
      quota_warning = storage=75%% /opt/mail.sh 75 %u
      quota_warning2 = storage=90%% /opt/mail.sh 90 %u
    }
